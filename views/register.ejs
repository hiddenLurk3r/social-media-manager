<div class="container mt-3">
        <h1 class="text-center">Register</h1>
        <form action="/register" method="POST">
            <div class="form-group">
                <label for="email">Email address</label>
                <input required type="email" class="form-control" name="email" id="email" aria-describedby="emailHelp" placeholder="Enter email">
            </div>
            <div class="form-group">
                <label for="password1">Password</label>
                <input required type="password" class="form-control" name="password1" id="password1" placeholder="Password">
            </div>
            <div class="form-group">
                    <label for="password2">Repeat password</label>
                    <input type="password" class="form-control" name="password2" id="password2" placeholder="Repeat password">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>